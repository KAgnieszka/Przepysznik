<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8BC34A"
    android:padding="20dp">

    <TextView
        android:id="@+id/tekst1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf = "parent"
        android:text="@string/o_nas"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/tekst2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:textAlignment="center"
        android:layout_below="@id/tekst1"
        app:layout_constraintTop_toBottomOf="@+id/tekst1"
        app:layout_constraintStart_toStartOf = "parent"
        android:text="@string/o_nas_opis"
        android:textSize="20sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tekst3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@id/tekst1"
        app:layout_constraintTop_toBottomOf="@+id/tekst2"
        app:layout_constraintStart_toStartOf = "parent"
        android:text="@string/telefon_48_352208492"
        android:textSize="20sp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tekst4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@id/tekst1"
        app:layout_constraintTop_toBottomOf="@+id/tekst3"
        app:layout_constraintStart_toStartOf = "parent"
        android:text="@string/e_mail_spokoquzko_wp_pl"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/backToHome"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tekst4"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:text="@string/powr_t"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>